set nocompatible
let &rtp = '~/.vim/bundle/vimtex,' . &rtp
let &rtp .= ',~/.vim/bundle/vimtex/after'
filetype plugin indent on
syntax enable

set shiftwidth=4
set expandtab

nnoremap q :qall!<cr>

if has('vim_starting')
  silent edit minimal.tex
endif

augroup Testing
  autocmd!
  autocmd VimEnter * call CreateMaps()
  autocmd VimEnter * call Test()
augroup END

function! CreateMaps()
  call vimtex#imaps#add_map({
        \ 'lhs' : '<m-i>',
        \ 'rhs' : '',
        \ 'leader'  : '',
        \ 'wrapper' : 'vimtex#imaps#wrap_environment',
        \ 'context' : [
        \   {'envs' : ['itemize', 'enumerate'],
        \    'rhs' : '\item '},
        \   {'envs' : ['description'],
        \    'rhs' : '\item['},
        \ ],
        \})
endfunction

function! Test()
  call search('description')
  call feedkeys("o\<m-i>item1] Does it work?", 'x')

  call search('begin.*itemize')
  call feedkeys("o\<m-i>Does it work?", 'x')

  normal! gg
endfunction
